<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>画像</th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.picture.user.name %></td>
        <td><%= favorite.picture.title %></td>
        <td><%= favorite.picture.content %></td>
        <td><%= image_tag favorite.picture.image.to_s, size: '70x70' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しく投稿する', new_picture_path, class: 'btn btn-default' %>