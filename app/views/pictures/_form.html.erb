<%= form_with(model: @picture, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :title %><br>
  <%= form.text_field :title, class: "field_area", size: "70*20" %><br><br>
  <%= form.label :content %><br>
  <%= form.text_area :content, class: "field_area", size: "70*40" %><br><br>
  <%= form.label :image %>
  <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
  <%= form.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: "field" %>
  <%= form.hidden_field :image_cache %><br><br>

  <%= form.submit '投稿', class: 'btn btn-default' %>
  <%= link_to "戻る", pictures_path, class: 'btn btn-default' %>
<% end %>