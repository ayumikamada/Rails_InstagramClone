<%= form_with(model: @picture, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="picture_title">
      <%= form.label :title, 'タイトル' %><br>
      <%= form.text_field :title %>
    </div><br>
    <div class="picture_content">
      <%= form.label :content, '投稿内容' %><br>
      <%= form.text_field :content %>
    </div><br>
    <div class="field">
      <%= form.label :image %>
      <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
      <%= form.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
      <%= form.hidden_field :image_cache %><br><br>
    </div>

<%= form.submit '投稿', class: 'btn btn-default' %>
<%= link_to "戻る", pictures_path, class: 'btn btn-default' %>
<% end %>