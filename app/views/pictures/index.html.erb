<h4>投稿一覧</h4>

<div class="container">
  <table class="table">
    <tr>
      <th>投稿者</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>画像</th>
    </tr>
    <% @pictures.each do |picture| %>   
    <tr> 
      <td><%= picture.user.name %></td>
      <td><%= picture.title %></td>
      <td><%= picture.content %></td>
      <td><%= image_tag picture.image.to_s, size: '100x100' %></td>
      <td><%= link_to '詳細', picture_path(picture.id) %></td>
      <% if logged_in? && current_user.id == picture.user_id %>
      <td><%= link_to "編集", edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      <% end %>
      </tr>
    <% end %>
  </table>
</div>
<br>

  <%= link_to '新しく投稿する', new_picture_path, class: 'btn btn-default' %>